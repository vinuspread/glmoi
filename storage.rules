rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null
        && (
          request.auth.token.admin == true
          || request.auth.token.email == "vinus@vinus.co.kr"
        );
    }

    // Admin image pool
    match /assets/{appId}/{allPaths=**} {
      allow read, write: if isAdmin();
    }

    // Default deny.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
